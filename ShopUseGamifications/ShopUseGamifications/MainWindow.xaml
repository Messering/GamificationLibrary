                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-30"/>
                            <RotateTransform/>
                            <TranslateTransform X="-6"/>
                        </TransformGroup>
                    </TextBox.RenderTransform>
                </TextBox>
                <TextBox x:Name="textBoxPasswords" Margin="95,195,87,87" RenderTransformOrigin="0.611,0.611">
                    <TextBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-30"/>
                            <RotateTransform/>
                            <TranslateTransform X="-6"/>
                        </TransformGroup>
                    </TextBox.RenderTransform>
                </TextBox>
                <TextBox x:Name="textBoxConfirmPasswords" Margin="132,236,50,46" RenderTransformOrigin="0.611,0.611">
                    <TextBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-30"/>
                            <RotateTransform/>
                            <TranslateTransform X="-6"/>
                        </TransformGroup>
                    </TextBox.RenderTransform>
                </TextBox>
                <TextBlock  Height="16" HorizontalAlignment="Left" Margin="35,56,0,0" x:Name ="errormessageNick" VerticalAlignment="Top" Width="243"  OpacityMask="Crimson" Foreground="#FFE5572C" RenderTransformOrigin="0.5,0.5" >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-25"/>
                            <RotateTransform/>
                            <TranslateTransform X="-6"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock  Height="16" HorizontalAlignment="Left" Margin="35,97,0,0" x:Name ="errormessageName" VerticalAlignment="Top" Width="229"  OpacityMask="Crimson" Foreground="#FFE5572C" RenderTransformOrigin="0.5,0.5" >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-25"/>
                            <RotateTransform/>
                            <TranslateTransform X="-6"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock  Height="16" HorizontalAlignment="Left" Margin="36,136,0,0" x:Name ="errormessageEmail" VerticalAlignment="Top" Width="219"  OpacityMask="Crimson" Foreground="#FFE5572C" RenderTransformOrigin="0.5,0.5" >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-25"/>
                            <RotateTransform/>
                            <TranslateTransform X="-6"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock  Height="16" HorizontalAlignment="Left" Margin="36,176,0,0" x:Name ="errormessagePassword" VerticalAlignment="Top" Width="230"  OpacityMask="Crimson" Foreground="#FFE5572C" RenderTransformOrigin="0.5,0.5" >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-25"/>
                            <RotateTransform/>
                            <TranslateTransform X="-6"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock  Height="16" HorizontalAlignment="Left" Margin="33,217,0,0" x:Name ="errormessageConfirmPassword" VerticalAlignment="Top" Width="270"  OpacityMask="Crimson" Foreground="#FFE5572C" RenderTransformOrigin="0.5,0.5" >
